{
    "dimensions": 1,
    "position properties": [
        {"name": "TILE", 
            "include": true, 
            "ranges": [[[-10, 10]]]},
        {"name": "CHECKPOINT", 
            "include": true, 
            "ranges": [[[0, 0]]]},
        {"name": "WALL", 
            "include": false, 
            "ranges": [[[-10, 10]]]}
    ],
    "type interpretations": [
        {"name": "action", 
            "type": "enum", 
            "range": [
                {"name": "LEFT"},
                {"name": "RIGHT"},
                {"name": "NONE"}
            ]
        }
    ],
    "robot": {
        "state": [
            {"name": "pos", 
                "type": "int", 
                "init": "random",
                "rand_ranges": [[[-10,-5]], [[5,10]]]},
            {"name": "act",
                "type": "action", 
                "init": "LEFT"}
        ],
        "policy": [
            "if (robot_state_act == LEFT) robot_state_act = RIGHT;",
            "if (robot_state_act == RIGHT) robot_state_act = LEFT;",
            "robot_state_act = LEFT;"
        ]
    },
    "specification": [
        "//@ assert (check_WALL(robot_state_pos) == 0)"
    ]
}